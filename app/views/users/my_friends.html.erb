<%= render 'friends/lookup' %>
<% if @friendships.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3" class="page-header">
          <h2>My Friends</h2>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <%# if @user.id == current_user.id %>
        <th>Actions</th>
        <%# end %>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td>
            <%= link_to "View Profile", user_path(friend), class: "btn btn-xs btn-primary" %>
        <%# if @user.id == current_user.id %>
          
            <%= link_to "Remove Friend", friendship_path(friend), method: :delete, 
            data: { confirm: "Are you sure yoy want to delete this stock from your portfolio?" },
            class: "btn btn-xs btn-danger" %>
          </td>
        <%# end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row col-lg-12">
    <p class="lead">You dont have any friends yet. Please add some!</p>
  </div>
<% end %>